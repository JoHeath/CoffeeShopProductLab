@model List<Product>

<h1> Welcome to The Coffee Shop Menu</h1>

<form asp-method="Product" asp-action="Details">
    
    
    
</form>
@{
    foreach(Product p in Model)
    {
        <a class="nav-link text-dark p-0" asp-action="Details" asp-route-id="@p.Id">
        <div class="card">
        <h2>@p.Name</h2>
       
        </div>
        </a>
        
    }
}